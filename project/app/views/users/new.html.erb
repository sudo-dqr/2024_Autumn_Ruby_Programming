<div class="container-fluid d-flex justify-content-center align-items-center vh-100">
  <div class="login-container">
    <div class="login-header">注册</div>
    <%= form_with(model: @user, local: true, class: 'login-form') do |form| %>
      <div class="mb-3">
        <%= form.label :name, '用户名', class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= form.label :email, '邮箱', class: 'form-label' %>
        <%= form.email_field :email, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= form.label :password, '密码', class: 'form-label' %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= form.label :password_confirmation, '确认密码', class: 'form-label' %>
        <%= form.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <%= form.submit '注册', class: 'btn btn-success w-100' %>
    <% end %>
  </div>
</div>